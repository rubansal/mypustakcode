<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileDetailsActivity">

    <RelativeLayout
        android:id="@+id/maintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:minHeight="?android:attr/actionBarSize" >

        <ImageView
            android:id="@+id/navigationnn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/back_icon"/>

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:maxEms="6"
                android:text="PROFILE"
                android:maxLines="1"
                android:textColor="#3f3e3e"
                android:textSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_edittext"
        >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="Name"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:id="@+id/name"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="Email Address"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@+id/name"
            android:id="@+id/email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="Alternate Email Address"
            android:paddingStart="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@+id/email"
            android:id="@+id/alternate_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="Contact Number"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@+id/alternate_email"
            android:id="@+id/contact_number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="Upload Profile Picture"

            android:paddingLeft="10dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_below="@+id/contact_number"
            android:id="@+id/upload_profilepic"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_border1"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Change Password"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#04878e"
            android:layout_below="@+id/upload_profilepic"
            android:id="@+id/change_password"
            />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_button"
            android:text="Edit"
            android:gravity="center"
            android:textColor="#fff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_button"
            android:text="Save"
            android:gravity="center"
            android:textColor="#fff"/>

    </LinearLayout>




</RelativeLayout>