<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditAddress">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/maintop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:minHeight="?android:attr/actionBarSize" >

            <ImageView
                android:id="@+id/navigationnn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@drawable/cross"/>

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:text="EDIT ADDRESS"
                    android:maxLines="1"
                    android:textColor="#3f3e3e"
                    android:textSize="20sp" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_password_container"
            android:layout_marginTop="65dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:background="@drawable/bg_border1"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="Reciever's Name:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/reciever_name_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="Name*"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/reciever_name_text"
                android:id="@+id/reciever_name_edittext"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="Address:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/reciever_name_edittext"
                android:id="@+id/address_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"

                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="Address*"

                android:textAlignment="viewStart"
                android:paddingLeft="10dp"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/address_text"
                android:id="@+id/address_edittext"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="Landmark:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/address_edittext"
                android:id="@+id/landmark_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="Landmark*"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/landmark_text"
                android:id="@+id/landmark_edittext"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="State:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/landmark_edittext"
                android:id="@+id/state_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="State*"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/state_text"
                android:id="@+id/state_edittext"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="City:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/state_edittext"
                android:id="@+id/city_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"

                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="City*"

                android:textAlignment="viewStart"
                android:paddingLeft="10dp"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/city_text"
                android:id="@+id/city_edittext"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="Pincode:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/city_edittext"
                android:id="@+id/Pincode_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="Pincode*"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/Pincode_text"
                android:id="@+id/pincode_edittext"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:text="Contact No:"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/pincode_edittext"
                android:id="@+id/contact_text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_border1"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:hint="Contact No*"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"

                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_below="@+id/contact_text"
                android:id="@+id/contact_edittext"
                />


        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_password_container"
            android:background="@drawable/blue_button"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"

            android:text="Update"
            android:gravity="center"
            android:textColor="#fff"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>